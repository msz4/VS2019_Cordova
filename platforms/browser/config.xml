<?xml version='1.0' encoding='utf-8'?>
<widget id="com.iidea.LV2019" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Let's Vote 2019</name>
    <description>
        A voter education app for the 2019 Nigerian general elections.
    </description>
    <author email="misbahu.s.z@gmail.com" href="iidea.org.ng">
        Misbahu S.Z. || IIDEA
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="Orientation" value="portrait" />
</widget>
